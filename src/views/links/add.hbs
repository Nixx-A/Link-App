<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Add Link</h4>
        </div>
        <div class="card-body">
          <form action="/links/add" method="POST">

            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" name="title" class="form-control" id="title" placeholder="Title" autofocus>
            </div>

            <div class="form-group">
              <label for="url">URL</label>
              <input type="url" name="url" class="form-control" id="url" placeholder="URL">
            </div>

            <div class="form-group">
              <label for="description">Description</label>
              <textarea name="description" rows="3" class="form-control mb-2" id="description" placeholder="Description"></textarea>
            </div>

            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>
